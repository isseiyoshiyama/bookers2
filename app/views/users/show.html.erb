<p id="notice"></p>
<div class="container px-5 profile-container">
  <div class="row">
    
    <div class="">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
            <tr>
               <th>name</th><td><%= @user.name %></td>
            </tr>
            <tr>
               <th>Introduction</th><td><%= @user.introduction %></td>
            </tr>
        </tbody>
      </table>
    <!-- <h3 class="profile-name"><%= @user.name %></h3> -->

    <div class="btn btn-outline-secondary btn-block btn-outline-secondary ">
      <% if @user.id == current_user.id %>
        <%= link_to "", edit_user_path(@user), class: "fas fa-user-cog btn-block " %>
      <% end %>
    </div>
      
      <!--ここから入力フォーム -->
      <!--ここのdivは後でクラスを統一できる-->
      <h2 class="mt-3">New Book</h2>

        <%= form_with model: @book, local:true do |f| %>
          <div class="mb-3">Title</div>
          <%= f.text_field :title %>
          
          <div class="mb-3 mt-3">Opinion</div>
          <%= f.text_area :body %>
          <br>
          <div class="mt-3">
            <%= f.submit 'Create Book', class: 'btn btn-success ' %>
          </div>
          
        <% end %>
      <!--ここまで入力フォーム -->
    </div>
    
    <div class="col-md-8 offset-md-1">
      
    </div>
    
  </div>
  
    
</div>



